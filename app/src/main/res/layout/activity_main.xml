<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/tv_tituloId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_carrosId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/tv_carros"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tituloId" />

    <TextView
        android:id="@+id/tv_favoritosId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_favoritos"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_tituloId"
        app:layout_constraintStart_toEndOf="@id/tv_carrosId"/>

    <ImageView
        android:id="@+id/iv_carId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eletric_car"
        android:contentDescription="@string/description_carro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_carrosId"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_precoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_preco"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_carId"/>

    <TextView
        android:id="@+id/tv_precoValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_preco_value"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_precoId"
        app:layout_constraintTop_toBottomOf="@id/iv_carId"/>

    <TextView
        android:id="@+id/tv_bateriaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_bateria"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_precoId"/>

    <TextView
        android:id="@+id/tv_bateriaValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_bateria_value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_bateriaId"
        app:layout_constraintTop_toBottomOf="@id/tv_precoId"/>

    <TextView
        android:id="@+id/tv_potenciaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_potencia"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bateriaId"/>

    <TextView
        android:id="@+id/tv_potenciaValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_potencia_value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_potenciaId"
        app:layout_constraintTop_toBottomOf="@id/tv_bateriaId"/>

    <TextView
        android:id="@+id/tv_recargaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_recarga"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_potenciaId"/>

    <TextView
        android:id="@+id/tv_recargaValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_recarga_value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_recargaId"
        app:layout_constraintTop_toBottomOf="@id/tv_potenciaId"/>

    <Button
        android:id="@+id/btn_calcularAutonomiaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_calcular_autonomia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recargaId" />


</androidx.constraintlayout.widget.ConstraintLayout>